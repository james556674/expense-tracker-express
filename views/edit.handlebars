<div class="container my-5" style="max-width: 400px;">
  <form action="/records/{{record._id}}?_method=PUT" method="POST">
    <div class="form-group row">
      <small class="col-auto"><span style="color: red;">*</span>必填欄位</small>
      <div class="col-sm-8 text-center">
        <h5>請修改你的支出</h5>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-auto col-form-label" for="name">
        名稱
        <span style="color: red; margin-left: 0.1em">*</span>
      </label>
      <div class="col-sm-9">
        <input type="text" class="form-control" id="name" name="name" value="{{record.name}}" required>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-auto col-form-label" for="date">
        日期
        <span style="color: red; margin-left: 0.1em">*</span>
      </label>
      <div class="col-sm-9">
        <input type="date" class="form-control" id="date" name="date" value="{{date}}" required>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-auto col-form-label" for="category">
        類別
        <span style="color: red; margin-left: 0.1em">*</span>
      </label>
      <div class="col-sm-9">
        <select id="category" class="form-control" name="category">
          {{#each categories}}
          <option {{#ifEquals ../record.categoryTitle this}} selected {{/ifEquals}}>{{this}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-auto col-form-label" for="amount">
        金額
        <span style="color: red; margin-left: 0.1em">*</span>
      </label>
      <div class="col-sm-9">
        <input type="number" class="form-control" id="amount" placeholder="" name="amount" min="0"
          value="{{record.amount}}" required>
      </div>
    </div>
    <div class="form-group mt-2">
      <button type="submit" class="btn btn-success">儲存</button>
    </div>
  </form>
</div>